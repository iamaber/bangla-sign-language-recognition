# ========================================
# WandB Configuration
# ========================================
WANDB_API_KEY=your_wandb_api_key_here
WANDB_PROJECT=bangla-sign-language-recognition
WANDB_ENTITY=your_wandb_username

# Optional: WandB offline mode (set to offline to disable sync)
WANDB_MODE=online

# ========================================
# Brain Configuration (for AI tutor)
# ========================================
# Gemini API Key
GEMINI_API_KEY=your_gemini_api_key_here

# Enable/disable Gemini integration
BRAIN_USE_GEMINI=false

# Model configuration
BRAIN_MODEL_NAME=gemini-2.0-flash-exp
BRAIN_TIMEOUT_S=30.0
BRAIN_TEMPERATURE=0.7
BRAIN_MAX_OUTPUT_TOKENS=512
BRAIN_TUTOR_MAX_OUTPUT_TOKENS=1024
BRAIN_TUTOR_MIN_WORDS=3

# Trigger and queue settings
BRAIN_DEBOUNCE_MS=500
BRAIN_COOLDOWN_MS=1000
BRAIN_QUEUE_MAXSIZE=10
BRAIN_TRIGGER_POLICY=smart
BRAIN_PHRASE_PAUSE_MS=2000
BRAIN_MIN_DELTA_WORDS=1

# Logging settings
BRAIN_DEBUG=false
BRAIN_LOG_ENABLED=true
BRAIN_LOG_PATH=logs/brain.log
BRAIN_LOG_MAX_BYTES=10485760

# Cache settings
BRAIN_CACHE_ENABLED=true
BRAIN_CACHE_TTL_S=300.0
BRAIN_CACHE_MAX_ITEMS=100

# Response limits
BRAIN_MAX_WORDS=15
BRAIN_TUTOR_MAX_WORDS=20
BRAIN_RETRIES=2
BRAIN_STREAMING=true
